%div.carousel.slide#carousel-example-generic{data: {ride: 'carousel'}}
  <!-- Indicators -->
  %ol.carousel-indicators
    %li.active{data: {target: '#carousel-example-generic', slide: {to: '0'}}}
    %li{data: {target: '#carousel-example-generic', slide: {to: '1'}}}
    %li{data: {target: '#carousel-example-generic', slide: {to: '2'}}}

  <!-- Wrapper for slides -->
  %div.carousel-inner{role: 'listbox'}
    - @products.each do |product|
      %div.item{class: product == @products.first && 'active'}
        = image_tag product.image_url
        %div.carousel-caption= product.name

  <!-- Controls -->
  %a.left.carousel-control{href: "#carousel-example-generic", role: "button", data: {slide: "prev"}}
    %span.glyphicon.glyphicon-chevron-left{aria: {hidden: "true"}}
    %span.sr-only Previous
  %a.right.carousel-control{href: "#carousel-example-generic", role: "button", data: {slide: "next"}}
    %span.glyphicon.glyphicon-chevron-right{aria: {hidden: "true"}}
    %span.sr-only Previous
